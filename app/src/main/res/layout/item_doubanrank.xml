<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp">

        <TextView
            android:id="@+id/item_rank"
            android:layout_width="50dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/item_rank_iv_img"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="3dp"
            android:layout_toRightOf="@id/item_rank"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_temp_pic" />

        <TextView
            android:id="@+id/item_rank_tv_tittle"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/item_rank_iv_img"
            android:gravity="left"
            android:text="标题"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/item_rank_tv_info"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_below="@id/item_rank_tv_tittle"
            android:layout_toRightOf="@id/item_rank_iv_img"
            android:ellipsize="end"
            android:maxLines="6"
            android:paddingTop="8dp"
            android:text="信息"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/item_rank_tv_score"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/item_rank_tv_info"
            android:background="#f7fa1c"
            android:gravity="center"
            android:text="评分"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>