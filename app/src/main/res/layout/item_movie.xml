<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"

    >

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        >
        <!--封面-->
        <ImageView
            android:id="@+id/item_movie_iv_img"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_temp_pic"/>
        <!--清晰度-->
        <TextView
            android:id="@+id/item_movie_tv_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_movie_iv_img"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:padding="3dp"
            android:text="高清"
            android:textColor="@android:color/white"
            android:textSize="9sp"/>
        <!--名称-->
        <TextView
            android:id="@+id/item_movie_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_movie_iv_img"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="电影名称"
            android:textColor="@android:color/black"
            android:textSize="13sp"/>
        <!--评分-->
        <TextView
            android:id="@+id/item_movie_tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_movie_tv_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:text="评分"
            android:textColor="@android:color/black"
            android:textSize="11sp"/>
        <!--类型标题-->
        <TextView
            android:id="@+id/item_movie_tv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_movie_tv_title"
            android:layout_below="@id/item_movie_tv_title"
            android:layout_marginTop="3dp"
            android:text="类型:"
            android:textColor="@android:color/black"
            android:textSize="10sp"/>
        <!--类型1-->
        <TextView
            android:id="@+id/item_movie_tv_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_movie_tv_type_title"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/item_movie_tv_type_title"
            android:background="@drawable/item_movie_type_bg"
            android:ellipsize="end"
            android:padding="1dp"
            android:singleLine="true"
            android:text="类型1"
            android:textColor="@android:color/white"
            android:textSize="8sp"/>
        <!--类型2-->
        <TextView
            android:id="@+id/item_movie_tv_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_movie_tv_type_title"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/item_movie_tv_type1"
            android:background="@drawable/item_movie_type_bg"
            android:padding="1dp"
            android:text="类型3"
            android:textColor="@android:color/white"
            android:textSize="8sp"/>
        <!--类型3-->
        <TextView
            android:id="@+id/item_movie_tv_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_movie_tv_type_title"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/item_movie_tv_type2"
            android:background="@drawable/item_movie_type_bg"
            android:padding="1dp"
            android:text="类型3"
            android:textColor="@android:color/white"
            android:textSize="8sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>