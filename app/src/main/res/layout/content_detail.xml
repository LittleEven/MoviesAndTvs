<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--基本信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/decor_iv_cover"
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/detail_tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="基础信息"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
        </LinearLayout>
        <!--介绍标题-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:text="介绍"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
        </LinearLayout>
        <!--介绍-->
        <TextView
            android:id="@+id/detail_tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="电影介绍"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
        <!--在线播放-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:text="下载地址"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
        </LinearLayout>
        <!--在线播放-->
        <Button
            android:id="@+id/detail_btn_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/detail_btn_online"
            android:text="在线播放"
            android:textColor="@android:color/white"/>
        <!--地址标题-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:text="下载地址"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
        </LinearLayout>
        <!--下载地址-->
        <com.brioal.xunyingwang.view.ScrollRecyclerView
            android:id="@+id/detail_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.brioal.xunyingwang.view.ScrollRecyclerView>
    </LinearLayout>
</ScrollView>